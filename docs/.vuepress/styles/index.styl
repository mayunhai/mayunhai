::-moz-selection {
  background: #e1e1e1;
  color: $accentColor;
}

::selection {
  background: #e1e1e1;
  color: $accentColor;
}

// scrollbar begin
::-webkit-scrollbar {
  width: 6px;
  height: 5px
}

::-webkit-scrollbar-track {
  box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.18);
  -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.18)
}

::-webkit-scrollbar-thumb {
  border-radius: 5px;
  box-shadow: inset 0 0 6px rgba(0, 0, 0, .3);
  -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.18);
  background-color: rgba(99, 99, 99, 0.18);
}
// scrollbar end

// nav begin
#app .navbar a {
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}
.navbar .logo {
  position: relative;
  top: 0.14rem;
}
.navbar, .sidebar, div[class*="language-"] {
  backdrop-filter: blur($filterBlur)!important;
  -webkit-backdrop-filter: blur($filterBlur)!important;
  background: $navBgColor!important;
  border: none!important;
}
.sidebar > .sidebar-links {
  padding: 1.5rem 0 .5rem!important;
}
.sidebar > .sidebar-links > li:not(:first-child) {
  margin-top: 0.2rem!important;
}
.navbar .links {
  background: transparent!important;
}
.search-box input {
  background: transparent url(/mayunhai/assets/img/search.83621669.svg) 0.6rem 0.6rem no-repeat!important;
  border-width: 2px!important;
  border-color: $borderColor!important;
  transition: border-color .3s ease, width .3s ease!important;
}
.search-box input:focus {
  border-color: $accentColor!important;
}
.home .features {
  border: none!important;
}
tr:nth-child(2n) {
  background: $tipBgColor!important;
}
// nav end

// other
.sw-update-popup {
  border-color: #2196F3!important;
}

#app .home {
  display: flex;
  flex-direction: column;
  min-height: calc(100vh - 3.6rem);
  -webkit-box-pack: justify;
  -ms-flex-pack: justify;
  justify-content: space-between
}
.home .hero .action-button {
  background: $accentColor !important;
}
.home .hero .action-button:hover {
  opacity: 0.75
}
.home .hero img {
  object-fit: contain;
  margin: 1rem auto 0!important;
  position: relative;
  top: 2rem;
}
.custom-block.tip {
  background: $tipBgColor!important;
  border-color: $accentColor !important;
}

/* 夜间模式 */
#switch {
  position: fixed;
  cursor: pointer;
  right: 0px;
  top: 0px;
  z-index: 19;
  width: 180px;
  height: 180px;
  transition: .3s;
}

// 安装 btn begin
button.install-btn {
  z-index: 100;
  align-items: center;
  -webkit-animation: shine 8s infinite;
  animation: shine 8s infinite;
  -webkit-animation-delay: 0s;
  animation-delay: 0s;
  -webkit-animation-timing-function: linear;
  animation-timing-function: linear;
  background: $accentColor;
  background: linear-gradient(-45deg, $accentColor 50%, #2e59d4 60%, $accentColor 70%);
  background-size: 600% 100%;
  border: 0;
  border-radius: 4px;
  color: #fff;
  cursor: pointer;
  display: flex;
  font-size: 14px;
  font-weight: 500;
  justify-content: center;
  outline: none;
  padding: 7px 16px;
  position: fixed;
  right: 49px;
  top: 120px;
}

button.install-btn:hover {
  opacity: .5
}

button.install-btn i {
  background: #fff;
  border-radius: 1px;
  display: inline-block;
  height: 2px;
  margin-right: 8px;
  position: relative;
  width: 10px;
}

button.install-btn::before {
  background: #fff;
  border-radius: 1px;
  content: '';
  display: inline-block;
  height: 10px;
  position: relative;
  width: 2px;
  left: 6px;
}

@-webkit-keyframes shine {
  0% {
    background-position-x: 400%;
  }

  100% {
    background-position-x: 200%;
  }
}

@keyframes shine {
  0% {
    background-position-x: 400%;
  }

  100% {
    background-position-x: 200%;
  }
}
// 安装 btn end

// 移动端适配
@media screen and (max-width: 1300px) {
  #switch {
    opacity: .5;
    right: -32px;
  }

  button.install-btn {
    opacity: .5;
    right: 16px;
  }
}

@media screen and (max-width: 719px) {
  .navbar .logo {
    display: none;
  }

  // 移动端隐藏 code 行号
  div[class*="language-"].line-numbers-mode::after, .line-numbers-wrapper, div[class*="language-"].line-numbers-mode .highlight-lines .highlighted:before {
    display: none
  }

  div[class*="language-"].line-numbers-mode pre {
    padding-left: 1.5rem
  }

  // 边距
  .theme-default-content div[class*="language-"] {
    margin: 0rem !important;
    border-radius: 0;
  }

  // 背景
  #app .sidebar {
    transition: transform .3s ease!important;
  }
}



// code beign
// 行内代码
li code,
p code {
  color: $accentColor !important;
  background-color: $tipBgColor !important;
  margin: 0 2px !important;
  padding: 0.25rem 0.4rem !important;
}

div[class*="language-"].line-numbers-mode::after {
  border-right: 1px solid rgba(0, 0, 0, 5%);
  background: $navBgColor;
}
div[class*="language-"].line-numbers-mode .highlight-lines .highlighted:before {
  background-color: rgba(0, 0, 0, 35%) !important;
}
div[class*="language-"] .highlight-lines .highlighted {
  background-color: rgba(0, 0, 0, 10%) !important;
}
div[class*="language-"].line-numbers-mode .line-numbers-wrapper, div[class*="language-"]::before {
  color: $codeNumbersColor !important;
}
.theme-default-content pre code, .theme-default-content pre[class*="language-"] code {
  color: $codeDefaultColor !important;
}
.token.comment, .token.block-comment, .token.prolog, .token.doctype, .token.cdata {
  color: $codeCommentColor !important;
}
.token.punctuation {
  color: $codePunctuationColor !important;
}
.token.attr-name,.token.deleted,.token.namespace,.token.tag {
    color: $codeTagColor !important;
}
.token.function-name {
    color: $codeFunctionColor !important;
}
.token.boolean,.token.function,.token.number {
    color: $codeBooleanColor!important;
}
.token.class-name,.token.constant,.token.property,.token.symbol {
    color: $codeClassNameColor!important;
}
.token.atrule,.token.builtin,.token.important,.token.keyword,.token.selector {
    color: $codeSelectorColor!important;
}
.token.attr-value,.token.char,.token.regex,.token.string,.token.variable {
    color: $codeRegexColor!important;
}
.token.entity,.token.operator,.token.url {
    color: $codeUrlColor!important
}
// code end

